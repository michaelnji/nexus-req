{
    "git": {
        "tagName": "v${version}"
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN"
    },
    "hooks": {
        "before:init": [
            "git pull",
            "bun test"
        ],
        "after:bump": [
            "bunx auto-change-log -p"
        ]
    },
    "npm": {
        "publish": true
    }
}